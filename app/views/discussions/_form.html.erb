<%= bootstrap_form_with(model: [@square, @discussion], local: true) do |f| %>
    <%= f.alert_message "Please fix the errors below", error_summary: false %>
    <%= f.text_field :body %>
    <%= f.form_group do %>
        <%= f.primary @discussion.persisted? ? "Update" : "Create" %>
        <%= link_to "Cancel", squares_path %>
    <% end %>
<% end %>