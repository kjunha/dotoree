<h1>Account Management</h1>
<div class="user_info">
    <h4>User name: <%= current_user.name %></h4>
    <h4>User Email: <%= current_user.email %></h4>
    <%= link_to "Edit Account", edit_user_path(@user), class: "btn btn-secondary" %>
    <%= link_to "Delete Account", @user, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
</div>